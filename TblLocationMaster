CREATE TABLE [dbo].[TblLocationMaster](
	[LocationId] [int] NOT NULL,
	[LocationName] [varchar](200) NULL,
	[LocationCity] [varchar](50) NULL,
	[Status] [nchar](10) NULL,
	[LocationImage] [varchar](500) NULL,
	[CountryId] [int] NULL,
	[CityId] [int] NOT NULL,
	[LocationAddress] [varchar](1500) NULL,
	[FacilityCode] [varchar](20) NULL,
	[Primarykeyvalue] [int] IDENTITY(1,1) NOT NULL,
	[CountryCityFacility] [varchar](100) NULL,
 [CountryName] VARCHAR(25) NULL, 
    CONSTRAINT [PK_TblLocationMaster] PRIMARY KEY CLUSTERED 
(
	[Primarykeyvalue] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, FILLFACTOR = 80) 
) 

GO


ALTER TABLE [dbo].[TblLocationMaster]  WITH CHECK ADD  CONSTRAINT [FK_TblLocationMaster_CountryId] FOREIGN KEY([CountryId])
REFERENCES [dbo].[CountryCode] ([CountryId])
GO

ALTER TABLE [dbo].[TblLocationMaster] CHECK CONSTRAINT [FK_TblLocationMaster_CountryId]
GO
