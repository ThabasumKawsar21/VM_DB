CREATE PROCEDURE [dbo].[InsertLinkRequest]
(
@RequestID INT,
@HostID VARCHAR(50),
@EmailID VARCHAR(50)
)
AS
BEGIN
SET NOCOUNT ON 
-- SET NOCOUNT ON added to prevent extra result sets from
-- interfering with SELECT statements.
BEGIN TRY
BEGIN TRAN
DECLARE @ErrorMessage VARCHAR(8000);
DECLARE @ErrorSeverity INT;
DECLARE @ErrorState INT;

	UPDATE LinkHistory SET IsActive=0 WHERE RequestID=@RequestID
	INSERT INTO LinkHistory(RequestID, EmailID, HostID, SentOn, IsActive) VALUES(@RequestID, @EmailID, @HostID, GETDATE(), 1)
	SELECT @@IDENTITY as LinkID
COMMIT TRAN
END TRY

BEGIN CATCH
ROLLBACK TRAN
IF (@@ERROR <> 0)
BEGIN	
SELECT
@ErrorMessage =ERROR_MESSAGE(),
@ErrorSeverity = ERROR_SEVERITY(),
@ErrorState = ERROR_STATE();
RAISERROR (@ErrorMessage, @ErrorSeverity, @ErrorState)
END
END CATCH	

RETURN 1 
SET NOCOUNT OFF;	
END


