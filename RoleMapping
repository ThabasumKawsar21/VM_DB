CREATE TABLE [dbo].[RoleMapping] (
    [RoleMappingID] INT           IDENTITY (1, 1) NOT NULL,
    [City]          VARCHAR (100) NULL,
    [Facility]      VARCHAR (100) NULL,
    [UserID]        VARCHAR (50)  NOT NULL,
    [RoleID]        INT           NOT NULL,
    [IsActive]      BIT           NOT NULL,
    [Createdby]     VARCHAR (50)  NOT NULL,
    [CreatedDate]   DATETIME      NOT NULL,
    [LastUpdatedby] VARCHAR (50)  NULL,
    [LastUpdatedOn] DATETIME      NULL,
    [CountryId]     INT           DEFAULT ((101)) NOT NULL,
	[CityId]        INT           NULL,
    [LocationId]    INT           NULL,
    CONSTRAINT [PK_RoleMapping] PRIMARY KEY CLUSTERED ([RoleMappingID] ASC) WITH (FILLFACTOR = 80),    
    CONSTRAINT [FK_RoleMapping_Roles] FOREIGN KEY ([RoleID]) REFERENCES [dbo].[Roles] ([RoleID]) ON DELETE CASCADE ON UPDATE CASCADE,
    CONSTRAINT [FK_RoleMapping_UserMaster] FOREIGN KEY ([UserID]) REFERENCES [dbo].[UserMaster] ([UserID])
);
